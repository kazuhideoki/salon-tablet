{
  "compilerOptions": {
    "outDir": "./dist",
    "sourceMap": true,
    "module": "esnext",
    "target": "es5",
    "moduleResolution": "node",
    "removeComments": true,
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,

    "strict": true,

    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,

    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "quill-image-resize-module-react": [
        "./src/util/@types/quill-image-resize-module-react.d.ts"
      ],
      "*": ["@types/*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
